{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "baseUrl": "./", 
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  